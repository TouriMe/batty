<div class="row full-width">
  <% @drivers.each do |driver| %>
    <div class="small-12 medium-6 large-4 columns">
      <div class="card">
        <%= link_to "/book/#{@tour.id}/#{driver.id}?vehicle_type=#{get_first_vehicle(driver)}" do %>
          <div class="card-image">
            <div class="card-driver-image">
              <% if driver.card_img.present? %>
                <%= image_tag driver.card_img %>
              <% else %>
                <%= image_tag 'noimagefound.jpg' %>
              <% end %>
              <span class="card-title">
                <%= driver.first_name%>
              </span>
              <span class="card-driver-avatar">
                <%= image_tag driver.avatar_url %>
              </span>
            </div>
          </div>
        <% end %>
        <div class="card-action">
          <div class="rating">
            <%= render 'partials/rating', rating: driver.rating %>
          </div>
          <div class="vehicle">
            <% driver.vehicles.each do |v| %>
              <strong><%= v.name + " " %></strong>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
