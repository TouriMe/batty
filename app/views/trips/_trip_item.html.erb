<%= link_to(tour_path(trip)) do %>
  <div class="card-item">
    <%= image_tag(trip.card_img, class: 'item-bg') %>
    <div class="name ellipsis">
      <%= trip.name %>
    </div>
    <div class="price">
      <%= number_to_currency(trip.tuktuk_price, :precision => 0) %>
    </div> 
    <div class="divider offset">
    </div>
    <div class="review offset">
      <div class="rating left">
        <%  rating = if trip.comments.present? then tr = trip.comments.pluck(:rating); tr.sum * 2 / tr.size / 2.0 else 5 end %>
        <%= render 'partials/rating', rating: rating %>
      </div>
      <span class="review-num right">
        <strong><%= pluralize(trip.comments.count, 'review') %></strong>
      </span>
    </div>
  </div>
<% end %>
