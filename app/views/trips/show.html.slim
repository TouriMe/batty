.container.trip_wrapper
  
  ul[data-orbit style="height: 330px;"]
    - @trip.images.each do |i|
      li
        img[src=i.url]
  
  .trip_head_wrapper
    .row
      section#trip_header 
        .large-9.small-12.trip_top_head.columns
          h1
            = @trip.name
          .meta_head
            section.trip_info_distance.meta_block
              p
                span.distance.block
                  = @trip.distance.blank? ? 'Unknown' : @trip.distance
                  | &nbsp;KM
                span.meta Distance

            section.trip_info_duration.meta_block
              p
                span.duration.block
                  = @trip.duration.blank? ? 'Unknown' : @trip.duration
                span.meta Duration

            section.trip_info_checkpoints.meta_block
              p
                span.checkpoints.block
                  = @trip.checkpoint_num.blank? ? 'Unknown' : @trip.checkpoint_num
                span.meta Checkpoints

        .large-3.small-12.trip_top_info.columns
          h1
            span = @trip.tuktuk_price 
            span  $
          .meta_func 
            a.trip_book_now
              | Book Now
            a.share
              | <i class="fa fa-heart-o"></i> Share


  .trip_detail_wrapper
    .row
      #detail-content.small-12.large-9.columns
        .detail
          h3
            | Tour description

          .trip_content
            = @trip.content.html_safe
            
        / .price
            p
              span Price(USD): $
              span = @trip.tuktuk_price
        
        #drivers-selection
          = render 'drivers'
          = render 'comments/comments', target: @trip

      
      #trip_sidebar.rhs.small-12.large-3.columns
        
        / #payment-form
          /= render 'purchases/form'

        #important-info
          - if @trip.important_info
            h2 Important Info
            = @trip.important_info.html_safe
