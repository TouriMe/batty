$("<%=j render(:partial => 'trips/drivers', :object => @drivers) %>")
  .appendTo($("#driver_wrapper"));

// Update pagination link
<% if @drivers.last_page? %>
  $('.pagination').html("That's all we have now!");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@drivers, 'More Drivers', :remote => true) %>");
<% end %>
